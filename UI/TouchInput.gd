extends Control

func _ready():
	_connect()

func _connect():
	$LeftButton.connect("pressed", self, "_on_LeftButton_pressed")
	$LeftButton.connect("released", self, "_on_LeftButton_released")
	$RightButton.connect("pressed", self, "_on_RightButton_pressed")
	$RightButton.connect("released", self, "_on_RightButton_released")
	$JumpButton.connect("pressed", self, "_on_JumpButton_pressed")
	$JumpButton.connect("released", self, "_on_JumpButton_released")



func _on_LeftButton_pressed():
	Input.action_press("move_left")


func _on_LeftButton_released():
	Input.action_release("move_left")


func _on_RightButton_pressed():
	Input.action_press("move_right")


func _on_RightButton_released():
	Input.action_release("move_right")


func _on_JumpButton_pressed():
	Input.action_press("jump")


func _on_JumpButton_released():
	Input.action_release("jump")
